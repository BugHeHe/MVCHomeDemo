
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://cdn.bootcss.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="~/Lis/jquery-1.11.0.js"></script>
<script src="~/Lis/vue.js"></script>
<script src="~/Lis/axios.js"></script>
<style>
    .col-center-block {
        float: none;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<body  style="">
    <div class="backlay" style=""></div>
    <div class="container login"  style="margin-top:130px;">
        <div class="row myCenter">
            <div class="col-xs-6 col-md-4 col-center-block login-box col-xl-5  col-lg-5 col-md-6  col-sm-10" style="">
                <div style="position: absolute; right: 20px; top:10px;font-size:66px;"><i class="fa fa-key"></i></div>

                <div style="background-color:#ffffff; padding:30px 15px; margin:0px -15px;">
                    <h3 class="h3" style="font-weight:200;text-align:center;margin-bottom:30px;">在线考试系统</h3>
                    <div class="form-group">
                        <input type="text" v-model="Shen" autocomplete="off" autofocus name="studentNo" class="form-control" placeholder="请输入身份证号">
                    </div>
                    <div class="form-group">
                        <input type="password" v-model="Mi" name="studentPwd" class="form-control" placeholder="请输入密码">
                    </div>
                    <div class="form-group">
                        <button name="button" v-on:click="Zou" class="btn btn-success btn-block">登录系统</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
<script>
    var av = new Vue({
        el: '.login',
        data: {
            Shen: '',
            Mi:'',
        },
        methods: {
            Zou() {
                if (this.Shen == '' || this.Mi == '') {
                    alert("不允许为空");
                } else {
                    axios.post('/Login/Login', { Shen: this.Shen, Mi: this.Mi }).then(Response => {
                        if (Response.data == "登录成功") {
                            location.href = "/KaoIndex/Index";
                        } else {
                            alert("账号或者密码错误");
                        }
                    })
                }
               
            }
        },
    })
</script>

